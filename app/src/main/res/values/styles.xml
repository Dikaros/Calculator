<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="btnTheme" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:textColor">#0c74e2</item>
        <item name="android:background">#ff0</item>
    </style>

    <style name="myBtnGray" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_margin">@dimen/item_margin</item>
        <item name="android:background">@drawable/btn_cal_bg_gray</item>
        <item name="android:textSize">@dimen/font_size</item>
    </style>
    <style name="myBtnLiteGray" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_margin">@dimen/item_margin</item>
        <item name="android:background">@drawable/btn_cal_bg_lite_gray</item>
        <item name="android:textSize">@dimen/font_size</item>
    </style>
    <style name="myBtnOrange" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_margin">@dimen/item_margin</item>
        <item name="android:background">@drawable/btn_cal_bg_orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size</item>
    </style>
    <style name="myBtnHeavyGray" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_margin">@dimen/item_margin</item>
        <item name="android:background">@drawable/btn_cal_bg_heavy_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size</item>
    </style>
</resources>
